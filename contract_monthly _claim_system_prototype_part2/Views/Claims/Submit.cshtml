
@model contract_monthly__claim_system_prototype_part2.Models.Claim
@{
	ViewData["Title"] = "Submit Claim";
}
<h2>Submit Claim</h2>
<form asp-action="Submit" method="post" enctype="multipart/form-data">
	@Html.AntiForgeryToken()
<div>
	<label>Hours Worked</label>
	<input asp-for="HoursWorked" type="number" step="0.25" required />
</div>
<div>
		<label>Hourly Rate</label>
		<input asp-for="HourlyRate" type="number" step="0.01" required />
</div>
<div>
	<label>Notes</label>
	<textarea asp-for="Notes"></textarea>
</div>
<div>
	<label>Supporting document (pdf, docx, xlsx) - max 5MB</label>
	<input type="file" name="upload" accept=".pdf, .docx, .xlsx" />
</div>
<button type="submit" style="padding:12px 20px; font-weight:600; background:#0b6; border-radius:6px;">SUBMIT</button>
</form>
